{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "src",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "files": [
    "app/app.module.ts",
    "app/app.component.ts",
    "main.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "../aot",
    "skipMetadataEmit": true
  }
}